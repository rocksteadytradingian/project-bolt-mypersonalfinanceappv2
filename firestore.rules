rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isCreatingProfile() {
      return isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // User profile data
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isCreatingProfile();
      allow update, delete: if isOwner(userId);
      
      // Subcollections
      match /{collection}/{docId} {
        allow read: if isOwner(userId);
        allow create: if (isOwner(userId) && 
                     (request.resource.data._isPlaceholder == true || 
                      request.resource.data.userId == userId)) ||
                     (isCreatingProfile() && request.resource.data._isPlaceholder == true);
        allow update, delete: if isOwner(userId);
      }
    }
  }
}
